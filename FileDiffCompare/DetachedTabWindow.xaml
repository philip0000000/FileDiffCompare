<Window x:Class="FileDiffCompare.DetachedTabWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileDiffCompare"
        mc:Ignorable="d"
        Title="DetachedTabWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- This is the reattach button -->
        <Button x:Name="ReattachButton" Content="Reattach" HorizontalAlignment="Right" Margin="10" Click="ReattachButton_Click"/>

        <!-- Content presenter for the tab content -->
        <ContentPresenter x:Name="TabContent" Grid.Row="1"/>
    </Grid>
</Window>
